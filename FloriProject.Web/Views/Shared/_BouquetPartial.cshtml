@model IEnumerable<FloriProject.Data.Bouquet>

<div class="table-responsive">
    <table class="table">
        <thead class="thead">
            <tr>
                <th scope="col"></th>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Photo)</th>
                <th scope="col">Buttons</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.Raw("<img title='Image' id='img' style='width:150px; height:100px;border-radius:10px;' src=\"data:image/jpeg;base64,"
                                   + Convert.ToBase64String(item.Photo) + "\" />")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "w3-btn w3-round w3-blue" })
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) *@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "w3-btn w3-round w3-indigo" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>