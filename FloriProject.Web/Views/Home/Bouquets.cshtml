@model IEnumerable<FloriProject.Data.Bouquet>

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Florí</title>

    @Styles.Render("~/Content/bouquet.css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


</head>


<body>
    <div class="bg-img">
        @Html.Partial("_Navbar")

        <div class="dquote">
            <h3 class="quote"><i>Цветы распускаются каждую весну, и все равно удивляют как в первый раз.</i></h3>
        </div>
    </div>


    <div class="container" style="width: 1500px">
        <div class="container-fluid text-center bg-grey">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xs-3">
                        <div class="thumbnail">

                            <img title="Click me" class="w3-hover-opacity" id="img"  style="width:300px;height:300px;opacity:0.9;filter: alpha(opacity=100) black;background-color:#000;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" />

                            <div class="overlay" onclick="onClick().getElementById('img')">
                                <div class="text"> @Html.DisplayFor(modelItem => item.Description)</div>
                            </div>
                            <p><strong> @Html.DisplayFor(modelItem => item.Name)</strong></p>

                            @*<div id="modal01" class="w3-modal" onclick="this.style.display='none'">
                                <img id="img1" class="w3-round w3-image" alt="Click off" style="width:500px;height:500px">
                            </div>
                            <script>
                                function onClick(element) {
                                    document.getElementById("img1").src = document.getElementById("img").src;
                                    document.getElementById("modal01").style.display = "block";
                                }
                            </script>*@
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</body>
</html>


