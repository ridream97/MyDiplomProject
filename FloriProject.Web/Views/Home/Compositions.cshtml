@model IEnumerable<FloriProject.Data.Composition>

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Florí</title>

    @Styles.Render("~/Content/composition.css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>


<body>
    <div class="bg-img">
        @Html.Partial("_Navbar")
        <div class="dquote">
            <h3 class="quote"><i>Лишь цветы живут по-настоящему. Живут отсчитанные им дни так отчаянно цветя, будто понимают лучше людей быстротечность жизни.</i></h3>
        </div>
    </div>






    <div class="container" style="width: 1500px">
        <div class="container-fluid text-center bg-grey">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xs-3">
                        <div class="thumbnail">
                            <img title="Click me" class="w3-hover-opacity" id="img" onclick="onClick(this)" style="width:300px;height:300px;opacity:0.9;filter: alpha(opacity=100) black;background-color:#000;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" />

                            <div class="overlay">
                                <div class="text"> @Html.DisplayFor(modelItem => item.Description)</div>
                            </div>

                            <p><strong> @Html.DisplayFor(modelItem => item.Name)</strong></p>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>




</body>
</html>
