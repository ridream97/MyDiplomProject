                <div class="wrap-contact2">
                    <form class="contact2-form validate-form">
                        <span class="contact2-form-title">
                            Registration
                        </span>

                        <div class="wrap-input2 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input2" })
                            @*<input class="input2" type="text" name="name">*@
                            <span class="focus-input2" data-placeholder="EMAIL"></span>
                        </div>

                        <div class="wrap-input2 validate-input" data-validate="Password is required">
                            @Html.PasswordFor(m => m.Password, new { @class = "input2" })
                            @*<input class="input2" type="text" name="email">*@
                            <span class="focus-input2" data-placeholder="PASSWORD"></span>
                        </div>

                        <div class="wrap-input2 validate-input" data-validate="Reapeted Password is required">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input2" })
                            @*<input class="input2" type="text" name="email">*@
                            <span class="focus-input2" data-placeholder="REAPEAT PASSWORD"></span>
                        </div>



                        <div class="container-contact2-form-btn">
                            <div class="wrap-contact2-form-btn">
                                <div class="contact2-form-bgbtn"></div>
                                <button class="contact2-form-btn">
                                    Register
                                </button>
                            </div>
                        </div>
                        @Html.ActionLink("Already have an account", "Login", "", new { @class = "contact2-form-btn" })
                    </form>
                </div>
            </div>
        </div>

    }

